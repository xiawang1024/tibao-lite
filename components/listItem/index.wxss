/* components/listItem/index.wxss */

.list-item{
  display: flex;
  width: 100%;
  padding:20rpx 0;  
  border-bottom: 1rpx solid #eeeeee;
  box-sizing: border-box;
}

.list-item .img-wrap{
  flex: 0 0 240rpx;
  height: 155rpx;
}

.list-item .img-wrap .img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.list-item .text-wrap{
  margin-left: 16rpx;
}

.list-item .text-wrap {
  flex:0 0 450rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item .text-wrap .title{
  line-height: 1.5;
  font-size: 30rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  
  text-overflow: ellipsis;
  overflow: hidden;
}

.list-item .text-wrap .from-time{
  display: flex;
  justify-content: space-between;
 font-size: 28rpx;
 color: #666666;
}

