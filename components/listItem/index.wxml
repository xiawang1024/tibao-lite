<!--components/listItem/index.wxml-->
<view class="list-item">
	<view class="img-wrap">
		<image class="img" mode="aspectFill" src="{{itemData.src}}"></image>
	</view>

	<view class="text-wrap">
		<view class="title">{{itemData.title}}</view>
		<view class="from-time">
			<text class="from">{{itemData.editor}}</text>
			<text class="time">{{itemData.datetime}}</text>
		</view>
	</view>
</view>