/* components/nav/index.wxss */
.custom-nav{
  position: fixed;
  z-index: 1024;
  bottom: 0;
  left:0;
  width: 100%;
  background-color: #ffffff;
}
.nav-wrap{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 650rpx;
  margin: 20rpx 50rpx 40rpx;
  background-color: #ffffff;
}
.custom-nav .btn{
  margin:0 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.custom-nav .btn.active{
  color: #4f94d0;
}

.custom-nav .icon {
  width: 40rpx;
  height: 40rpx;
}