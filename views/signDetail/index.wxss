/* views/signDetail/index.wxss */
.page{
  width: 100%;
  box-sizing: border-box;
}

.list-wrap .item { 
  padding:20rpx 0;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #efefef;
}

.info .item-l{
  padding:12rpx;
  display: flex;
  /* align-items: center; */
  width: 100%;
  font-size: 31rpx;
}

.info .item-l .label {
  flex:0 0 250rpx;
  text-align: justify; 
  text-align-last: justify; 
  text-justify: inter-ideograph;
  font-weight: bold;
}

.info .item-l .val{
  flex:0 0 460rpx;  
}
.my-info{
  width: 100%;
  padding:0 20rpx;
  margin-top: 60rpx;
  box-sizing: border-box;
}
.my-info .avatar-name {
  display: flex;
  align-items: center;
}

.my-info .avatar-name .avatar-wrap{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.my-info .avatar-name .nick-name{
  margin-left: 16rpx;
  font-size:32rpx;
}

.my-info .current-time {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
}
.my-info .current-time .label {
  display: flex;
  align-items: center;
}
.my-info .current-time .label .icon-time {
  width: 36rpx;
  height: 36rpx;
}

.btn-wrap{
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
  width: 100%;
}

.btn-wrap .btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  color: #ffffff;
  background:#d93636;
}

.btn-wrap .btn .text{
  margin-bottom: 12rpx;
}