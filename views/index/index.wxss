@import "./index.skeleton.wxss";

.search{
  margin-bottom: 24rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.search .ipt-wrap{
  flex:0 0 550rpx;
  display: flex;
  align-items: center;  
  border:1rpx solid #cccccc;
  border-radius: 12rpx;
}
.search .ipt-wrap .icon-small{
  padding:0 6rpx;
}
.search .ipt-wrap .ipt{
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
}
.search .btn{
  flex: 0 0 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 12rpx;
  background: #d93636;  
}
.first{
  width: 100%;
  padding: 0 8rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

.second{
  width: 100%;
  padding: 0 8rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

.three{
  width: 100%;
  padding: 0 8rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}
.first-nav{
  font-size: 36rpx;
}
.second-nav{ 
  font-size: 34rpx;
}
.three-nav{
  font-size: 30rpx;
}
.weui-tabs-bar__item{
  margin:0 12rpx;
}

.tab-bar-title__selected{
  border-bottom-color:#d93636 !important;
  color:#d93636;
}

.second .tab-bar-title__selected{
  border-bottom: none;
}
.three .tab-bar-title__selected{
  padding: 0 6rpx;
  border: 1rpx solid #d93636;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.second-tabs{  
  margin-top: 12rpx;
  width: 100%;
  white-space: nowrap;
  font-size: 34rpx;
}

.second-tabs .item{
  display: inline-block;
  margin: 0 12rpx;
}

.content-wrap{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}